package model;
import java.util.*;

public class BasicAlgebra {
	
private double[] numbers;

public void BasicAlgebra(double[]input){
	setNumbers(input);
}

public void setNumbers(double[] num){
	int i = 0;
	for(double d : num){
		numbers[i] = d;
	}
}

public double[] getNumbers(){
	return numbers;
}

/**
 * Adds all of the numbers stored in a provided list
 * @param list The list with the numbers to be added
 * @return the sum of 
 */
public double addAll(List<Double> list){
	
	double returnnum = 0;
	
	try{
	if(list.get(0).doubleValue() instanceof double  ){
	for(double d : list){
		returnnum += d;
	}
	}
	} catch(Exception e){
		System.out.println("Sorry but that is not a valid input to be subtracted");
	}
	return returnnum;
}
